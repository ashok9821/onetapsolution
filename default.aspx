    <script>
        $(document).ready(function () {
            $('.counter').each(function () {
                var $this = $(this),
                    countTo = $this.attr('data-count');

                $({ countNum: $this.text() }).animate({ countNum: countTo }, {
                    duration: 8000,
                    easing: 'swing',
                    step: function () {
                        $this.text(Math.ceil(this.countNum));
                    },
                    complete: function () {
                        $this.text(countTo);
                    }
                });
            });
        });
</script>
